        },
        {
            "endOffset": 150763,
            "parents": [],
            "refoffsets": {
                "br0170": {
                    "endOffset": 150710,
                    "startOffset": 150706
                }
            },
            "secId": "se0160",
            "sentence": "The model is also related to [17], where optimal maintenance/scraping is investigated.",
            "startOffset": 150677,
            "title": "An economic example"
        },
        {
